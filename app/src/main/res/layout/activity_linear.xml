<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d4cccc"
    android:gravity="center">

    <TextView
        android:layout_width="@dimen/small_box_width"
        android:layout_height="@dimen/small_box_height"
        android:background="@color/colorAccent"
        android:text="@string/app_name"

        />


    <TextView
        android:layout_width="@dimen/small_box_width"
        android:layout_height="@dimen/small_box_height"
        android:background="@color/colorPrimary"
        android:text="@string/label_name"

        />


    <TextView
        android:layout_width="@dimen/big_box_width"
        android:layout_height="@dimen/big_box_height"
        android:background="@color/colorPrimaryDark"
        android:text="@string/label_topic"

        />

    <TextView
        android:layout_width="@dimen/xbig_box_width"
        android:layout_height="@dimen/xbig_box_height"
        android:background="@color/colorAccent"
        android:text="@string/app_name"
        android:id="@+id/touch_area"
        />

</LinearLayout>